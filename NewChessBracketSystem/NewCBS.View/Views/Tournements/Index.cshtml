@model TournementsModel
@using NewCBS.Core

<link rel="stylesheet" href="~/css/Tournements.css" asp-append-version="true" />

<div class="backgroundContainer">
    @for (int i = 0; i < Model.Tournementnames.Count; i++){
        <form id="form-@i" class="Tournement" asp-controller="Tournement" asp-action="Index" onclick="submitForm('form-@i')">
            <div hidden>
                <input asp-for="ID" type="number" value="@Model.Ids[i]"/>
            </div>
            <div>
                @Model.StartTimes[i].Day/@Model.StartTimes[i].Month/@Model.StartTimes[i].Year
            </div>
            <div>
                @Model.Tournementnames[i]
            </div>
            <div>
                @Model.MaxPlayers[i]
            </div>
        </form>
    }
</div>